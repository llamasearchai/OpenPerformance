# ML Performance Engineering Platform - Environment Configuration

# OpenAI API Configuration
OPENAI_API_KEY=your_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/mlperf.log

# Database Configuration
DATABASE_URL=sqlite:///mlperf.db
REDIS_URL=redis://localhost:6379/0

# Cache and Storage
MLPERF_CACHE_DIR=./cache
MLPERF_OUTPUT_DIR=./outputs
MLPERF_RESULTS_DIR=./results

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=false
API_DEBUG=false
CORS_ORIGINS=*

# Distributed Training Configuration
MLPERF_DISTRIBUTED_BACKEND=nccl
MASTER_ADDR=localhost
MASTER_PORT=29500
WORLD_SIZE=1
RANK=0
LOCAL_RANK=0

# GPU Configuration
CUDA_VISIBLE_DEVICES=
GPU_MEMORY_FRACTION=0.8
GPU_ALLOW_GROWTH=true
MIXED_PRECISION=false

# Profiling Configuration
ENABLE_PROFILING=false
PROFILE_MEMORY=true
PROFILE_CPU=true
PROFILE_GPU=true
PROFILE_NETWORK=false
TRACE_FILE_FORMAT=chrome
PROFILE_SAMPLE_RATE=0.01

# Optimization Configuration
ACTIVATION_CHECKPOINTING=false
GRADIENT_COMPRESSION=false
CPU_OFFLOAD=false
BUCKET_SIZE_MB=25
COMPRESSION_RATIO=0.01

# Monitoring Configuration
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090
ENABLE_GRAFANA=false
GRAFANA_URL=http://localhost:3000
METRICS_INTERVAL=10

# Security Configuration
SECRET_KEY=dev-secret-key-change-in-production
ENABLE_AUTH=false
JWT_EXPIRY_HOURS=24
RATE_LIMIT=100/minute

# Framework Integration
MLPERF_ANTHROPIC_KEY=
MLPERF_WANDB_KEY=
MLFLOW_TRACKING_URI=sqlite:///mlflow.db 